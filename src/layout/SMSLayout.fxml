<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<SplitPane fx:id="smsLayout"
	dividerPositions="0.1, 0.2, 0.9" maxHeight="240.0" maxWidth="280.0"
	minHeight="240.0" minWidth="280.0" orientation="VERTICAL"
	prefHeight="240.0" prefWidth="280.0"
	stylesheets="/layout/css/screen_layout.css"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.screen.SMSController">
	<items>
		<Label fx:id="labelHour" alignment="CENTER" maxHeight="20.0"
			maxWidth="1.7976931348623157E308" minHeight="20.0" prefHeight="20.0"
			text="GODZINA" />
		<SplitPane dividerPositions="0.3" prefHeight="200.0"
			prefWidth="200.0">
			<items>
				<Label text="DO:" />
				<TextField />
			</items>
		</SplitPane>
		<TextArea prefHeight="200.0" prefWidth="200.0" />
		<SplitPane dividerPositions="0.5" maxHeight="30.0"
			minHeight="30.0" prefHeight="30.0"
			stylesheets="/layout/css/screen_options.css">
			<items>
				<Label fx:id="middleLabel" alignment="CENTER" layoutX="10.0"
					layoutY="10.0" maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" text="Wyslij" />
				<Label fx:id="rightLabel" alignment="CENTER" layoutX="10.0"
					layoutY="10.0" maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308" text="Usun" />
			</items>
		</SplitPane>
	</items>
</SplitPane>
